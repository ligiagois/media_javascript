Exercício 01

<html>
	<head>
		<meta charset="UTF-8" />
		<title>Programação Estruturada </title>
	</head>
	<body>
        <h1>Entrada do programa</h1>
        N1: <input type="number" id="a" value=""><br/>
        N2: <input type="number" id="b" value=""><br/>
        <button onclick='ExecutarExercicio () '>ok</button>
        <p id="resultado"></p>
        
        <script>
            function ExecutarExercicio () {
                var a = Number(document.getElementById('a').value);
                var b = Number(document.getElementById('b').value);
            
                //implemente apartir daqui
                
                var r = (a+b)/2; //atribua os resultados dos seus algoritmos a
                var r =r.toFixed(2);
                document.getElementById('resultado').innerHTML= "A média entre os números" + a "e" + b "é"+ r;
            }
        
        </script>
	</body>
</html>

Exercício 02

<html>
	<head>
		<meta charset="UTF-8" />
		<title>Programação Estruturada </title>
	</head>
	<body>
        <h1>Entrada do programa</h1>
        N1: <input type="number" id="a" value=""><br/>
        N2: <input type="number" id="b" value=""><br/>
        N3: <input type="number" id="c" value=""><br/>
        <button onclick='executarExercicio() '>ok</button>
        <p id="resultado"></p>
        
        <script>
            function executarExercicio() {
                var a = Number(document.getElementById('a').value);
                var b = Number(document.getElementById('b').value);
                var c = Number(document.getElementById('c').value);
            
                //implemente a partir daqui
                
                var r = ((a*4)+(b*5)+(c*6))/15; //atribua os resultados dos seus algoritmos a
                var r =Math.ceil(r);
               document.getElementById("resultado").innerHTML ="A média ponderada (4, 5 e 6) entre os números a, b e c é " + r;
            }
        
        </script>
	</body>
</html>

Exercício 03

<html>
	<head>
		<meta charset="UTF-8" />
		<title>Programação Estruturada </title>
	</head>
	<body>
        <h1>Entrada do programa</h1>
        N1: <input type="number" id="a" value=""><br/>
        N2: <input type="number" id="b" value=""><br/>
        N3: <input type="number" id="c" value=""><br/>
        N4: <input type="number" id="d" value=""><br/>
        <button onclick='executarExercicio() '>ok</button>
        <p id="resultado"></p>
        <p id="resultado1"></p>
        
        
        <script>
            function executarExercicio() {
                var a = Number(document.getElementById('a').value);
                var b = Number(document.getElementById('b').value);
                var c = Number(document.getElementById('c').value);
                var d = Number(document.getElementById('d').value);
            
                //implemente a partir daqui
                
                var r =Math.min(a,b,c,d);
                var x = Math.max(a,b,c,d);
               document.getElementById("resultado").innerHTML = x;
               document.getElementById("resultado1").innerHTML = r;
            }
            
        
        </script>
	</body>
</html>
